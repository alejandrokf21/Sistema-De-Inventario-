@model IEnumerable<Proyecto1TJ.Models.DataBodega>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreBodega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccionBodega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adminBodega)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreBodega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccionBodega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuarios.nombrePersona)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
