@model Proyecto1TJ.Models.MasterEntrada
@using Proyecto1TJ.Models;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageBodega.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Entrada</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-6" >
                    <div class="form-group">
                        <div class="col-sm-3">@Html.LabelFor(model => model.varInOut.fechaInOut, htmlAttributes: new { @class = "control-label" })</div>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.varInOut.fechaInOut, new { htmlAttributes = new { @class = "form-control",@Value = ViewBag.fechaI, @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.varInOut.fechaInOut, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.LabelFor(model => model.varInOut.ubicacionInOut, "ubicacionInOut", htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-sm-9">
                            @Html.DropDownList("ubicacionInOut", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.varInOut.ubicacionInOut, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.LabelFor(model => model.varInOut.cantidadInOut, htmlAttributes: new { @class = "control-label" })

                        </div><div class="col-sm-9">
                                @Html.EditorFor(model => model.varInOut.cantidadInOut, new { htmlAttributes = new { @class = "form-control",@Value= ViewBag.cant, @disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.varInOut.cantidadInOut, "", new { @class = "text-danger" })
                            </div>
                        </div>
            </div>
            <div class="col-sm-6">
                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.varInOut.descripcion, htmlAttributes: new { @class = "control-label" })
                        </div>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(model => model.varInOut.descripcion, 7, 80, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.varInOut.descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" /> | 
                        @Html.ActionLink("Agregar Producto", "AddProduct", new {},new { @class= "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.varTitulosDetalleInOutP.nombreProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.varTitulosDetalleInOutP.unit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.varTitulosDetalleInOutP.costoProducto)
                </th>
                <th>
                    Partial
                </th>
            </tr>

            @foreach (var item in Model.varDetalleInOutP)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.costoProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.partial)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>

        <hr />
        @*<div class="form-group">
            @Html.LabelFor(model => model.tipoInOut, "tipoInOut", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("tipoInOut", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipoInOut, "", new { @class = "text-danger" })
            </div>
        </div>*@
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
